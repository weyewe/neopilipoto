


<li class="span3">
  <div class="thumbnail">
    
    <%= link_to  root_url,
        :class => "thumbnail" , :style => "height:160px; overflow:hidden;" do %>
      <%= image_tag picture.index_image_url %>
    <% end %>
    
    <%# if  original_picture.any_picture_submission_approved? %>
      <%#= link_to  project_submission_picture_url( project_submission, original_picture.approved_picture ),
          :class => "thumbnail" , :style => "height:160px; overflow:hidden;" do %>
        <%#= image_tag original_picture.approved_picture.index_image_url %>
      <%# end %>
    <%# else %>
      <%#= link_to  project_submission_picture_url( project_submission, picture.last_revision),
       :class => "thumbnail" , :style => "height:160px; overflow:hidden;" do %>
        <%#= image_tag picture.last_revision.index_image_url %>
      <%# end %>
    <%# end %>
    
    
    <!-- <img alt="" src="http://placehold.it/260x180"> -->
    <div class="caption">
      <table cellpadding="0" cellspacing="0" border="0" 
            class="table table-striped table-bordered" id="example">
        
        <tbody>
          <tr>
            <td>Revisions</td>
            <td><%= picture.revisions.count %></td>
          </tr>
          <tr>
            <td>Selected?</td>
            <td>
              <% if picture.is_selected == true %>
                <span class="label label-success">Yes</span>
              <% else %>
                <span class="label label-important">No</span>
              <% end %>
              
            </td>
          </tr>
        </tbody>
      </table>
     
    </div>
     
     
        
      
  </div>
</li>



