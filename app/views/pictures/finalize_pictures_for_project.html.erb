
<div class="span9 content">
  <% if @project_membership.has_role?(:client) %>
    <%= create_guide("Select Pictures", 
          "Finalize the project:  <b>#{@project.title}</b>."+ "<br />"+ 
          "Number of pictures selected: #{@project.picture_select_quota} " + "<br />"+ 
          "You can ask the photographer to do <b>revision</b>, <b>picture edit</b>, and any other fixes").html_safe %>
  <% elsif @project_membership.has_role?(:collaborator) or
        @project_membership.has_role?(:owner) %>
    <%= create_guide("Pictures to be Finalized", 
          "Project:  <b>#{@project.title}</b>"+ "<br />"+ 
          "Number of pictures selected: #{@project.picture_select_quota} ").html_safe %>
  <% end %>
 
  <%= create_breadcrumb(@breadcrumbs).html_safe %>
  
  
  <div class="row-fluid">
  
  </div><!--/row-->


  <!-- display the uploaded image here!  -->
  <div class="span12"> 
    <ul class="thumbnails" id="uploaded_image_container">
      <% @pictures.each do |picture| %>
        <%= render :partial => "pictures/select_finalize_picture" , :locals => {
          :picture => picture,
          :project => @project 
        }%>
      <% end %>
    </ul>
  </div>
  
  
  
  
  
  
  
 
  
  
  
  
  
  
  
</div><!--/span-->


